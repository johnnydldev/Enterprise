@model Models.Branch

@{
    ViewData["Title"] = "Editar Sucursal";
}
<h1 class="text-green-color">Editar</h1>

<h4 class="text-green-color">Sucursal</h4>

<div>
    <div class="col-md-6">
        <form asp-action="Edit" method="Post" class="bg-green-opaque form-borderless rounded-component">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idBranch" />
            <div class="form-group ">
                <label asp-for="description" class="control-label text-white-color"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Editar" class="rounded-component btn-borderless text-white-color bg-green-light" />
                <a class="rounded-component btn-borderless bg-green-lime link-btn-dark-text" asp-action="Index">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}